{% extends 'base.html.twig' %}

{% block title %}PostoAjuda index{% endblock %}

{% block body %}
    <h1>PostoAjuda index</h1>

    <table class="table mt-5 p-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for posto_ajuda in posto_ajudas %}
            <tr>
                <td>{{ posto_ajuda.id }}</td>
                <td>{{ posto_ajuda.descricao }}</td>
                <td>
                    <a href="{{ path('app_posto_ajuda_show', {'id': posto_ajuda.id}) }}">mostrar</a>
                    <a href="{{ path('app_posto_ajuda_edit', {'id': posto_ajuda.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_posto_ajuda_new') }}" class="btn btn-primary">Criar novo</a>
{% endblock %}
