{% if is_granted('POSTO_COLETA_DELETE', posto_coletum) %}
<form method="post" action="{{ path('app_posto_coleta_delete', {'id': posto_coletum.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ posto_coletum.id) }}">
    <button class="btn btn-danger"> <i class="fas fa-trash"></i></button>
</form>
{% endif %}
