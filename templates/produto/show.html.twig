{% extends 'base.html.twig' %} {% block title %}Produto{% endblock %} {% block
body %}
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-2">
    <h1 class="font-weight-bold">Produto</h1>
    <div class="d-flex">
      <a
        href="{{ path('app_produto_index') }}"
        class="btn btn-primary shadow m-1"
        ><i class="fa fa-arrow-left"></i> Voltar</a
      >
      <a
        href="{{ path('app_produto_edit', { id: produto.id }) }}"
        class="btn btn-secondary shadow m-1"
        ><i class="fas fa-pencil"></i
      ></a>
    </div>
  </div>

  <div class="card shadow-lg">
    <div class="card-body">
      <table class="table">
        <tbody>
          <tr>
            <th>Id</th>
            <td>{{ produto.id }}</td>
          </tr>
          <tr>
            <th>Descrição</th>
            <td>{{ produto.descricao }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
