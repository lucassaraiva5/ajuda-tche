<form
  method="post"
  action="{{ path('app_motorista_delete', { id: motoristum.id }) }}"
  onsubmit="return confirm('Are you sure you want to delete this item?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ motoristum.id) }}"
  />
  <button class="btn btn-danger m-1"><i class="fas fa-trash"></i></button>
</form>
