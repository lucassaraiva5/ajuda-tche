{% extends 'base.html.twig' %}

{% block title %}Produtos Necessários{% endblock %}

{% block body %}
    <h1>Produtos Necessários</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantidade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for produto_necessario in produto_necessarios %}
            <tr>
                <td>{{ produto_necessario.id }}</td>
                <td>{{ produto_necessario.quantidade }}</td>
                <td>
                    <a href="{{ path('app_produto_necessario_show', {'id': produto_necessario.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_produto_necessario_edit', {'id': produto_necessario.id}) }}" class="btn btn-secondary"><i class="fas fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produto_necessario_new') }}" class="btn btn-success">Adicionar</a>
{% endblock %}
